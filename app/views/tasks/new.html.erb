<%= form_for(@task) do |t| %>
  <%= t.label :title, class: "form-label" %>
  <%= t.text_field :title, class: "form-control", :required => true %>
  <%= t.label :details, class: "form-label mt-3" %>
  <%= t.text_field :details, class: "form-control" %>

  <%= t.submit class: 'btn btn-primary w-30 mt-3'%>
<% end %>

<%= link_to 'Back to home', tasks_path, class: "btn btn-light mt-5" %>
